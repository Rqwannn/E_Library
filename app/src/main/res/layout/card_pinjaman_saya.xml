<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:elevation="12dp"
        android:layout_marginBottom="20dp"
        app:layout_anchorGravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundImageView"
                android:src="@drawable/contoh_buku"
                android:id="@+id/gambar_buku_detail_favorite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="150dp"
                android:layout_height="200dp"/>

            <LinearLayout
                android:paddingHorizontal="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Judul Buku"
                    android:textColor="@color/black"
                    style="@style/FontFamilyMedium"
                    android:textSize="14sp"
                    android:id="@+id/judul_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Pengarang Buku"
                    style="@style/FontFamilyMedium"
                    android:textSize="12sp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/pengarang_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Tanggal Peminjaman"
                    android:textColor="@color/black"
                    style="@style/FontFamilyMedium"
                    android:id="@+id/text_tanggal_peminjaman"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="30-03-2022"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:background="@drawable/textview_rounded"
                    style="@style/FontFamilyMedium"
                    android:layout_marginBottom="7dp"
                    android:id="@+id/tanggal_peminjaman"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Jadwal Pengembalian"
                    android:textColor="@color/black"
                    style="@style/FontFamilyMedium"
                    android:id="@+id/text_jadwal_peminjaman"
                    android:layout_marginBottom="7dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="30-03-2022"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:background="@drawable/textview_rounded"
                    style="@style/FontFamilyMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"
                    android:id="@+id/jadwal_peminjaman"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>