<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambar_welcome_slider"
        android:src="@drawable/welcome_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <TextView
        style="@style/FontFamilyBold"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="42dp"
        android:text="Selamat Datang"
        android:textColor="@color/text_color"
        android:textSize="28sp"
        android:textStyle="bold" />

    <View
        android:layout_marginVertical="10dp"
        android:background="@color/primary_color"
        android:layout_width="100dp"
        android:layout_height="2.5dp"/>

    <TextView
        style="@style/FontFamilyMedium"
        android:textSize="16sp"
        android:text="Ingin baca buku apa hari ini?"
        android:id="@+id/secondary_title"
        android:layout_width="220dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@color/white"
        android:text="Selanjutnya"
        android:visibility="gone"
        android:id="@+id/btn_selanjutnya"
        android:textSize="16sp"
        style="@style/FontFamilyMedium"
        android:textAllCaps="false"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>