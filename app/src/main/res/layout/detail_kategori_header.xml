<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/primary_color"
        app:cardElevation="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_kategori"
                android:src="@drawable/back_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Kategori Buku"
                android:textStyle="bold"
                style="@style/FontFamilyMedium"
                app:layout_constraintTop_toTopOf="@+id/back_kategori"
                app:layout_constraintBottom_toBottomOf="@+id/back_kategori"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/judul_kategori_buku"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/judul_kategori_buku"
                app:layout_constraintRight_toRightOf="@+id/judul_kategori_buku"
                app:layout_constraintTop_toBottomOf="@+id/judul_kategori_buku"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Matematika"
                android:textSize="16sp"
                style="@style/FontFamilyMedium"
                android:id="@+id/text_mapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>