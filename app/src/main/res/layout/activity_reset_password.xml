<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    tools:context=".ResetPassword">

    <ImageView
        android:src="@drawable/reset_password_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/FontFamilyBold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Reset"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        style="@style/FontFamilyBold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Password"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:text="Password Baru"
        android:layout_marginLeft="20dp"
        style="@style/FontFamilyMedium"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="4dp"
        app:cardCornerRadius="7dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutNoBorder"
            android:id="@+id/new_password"
            app:endIconMode="password_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/field_color"
                style="@style/FontFamily"
                android:hint="Password Baru"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:text="Konfirmasi Password"
        android:layout_marginLeft="20dp"
        style="@style/FontFamilyMedium"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="4dp"
        app:cardCornerRadius="7dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutNoBorder"
            android:id="@+id/konfirmasi_password"
            app:endIconMode="password_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/konfirmasi_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/field_color"
                style="@style/FontFamily"
                android:hint="Konfirmasi Password"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_password"
        android:text="Submit"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="7dp"
        android:backgroundTint="@color/button_color"
        android:paddingVertical="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.button.MaterialButton>

</LinearLayout>